<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import edu.cnm.deepdive.langton.view.TerrainView?>
<GridPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="edu.cnm.deepdive.langton.controller.MainController"
  stylesheets="@styles.css">

  <columnConstraints>
    <ColumnConstraints
      percentWidth="33.3"/>
    <ColumnConstraints
      percentWidth="33.4"/>
  </columnConstraints>

<!--  TODO Include element for custom view.-->

  <Slider
    fx:id="populationSize"
    min="1"
    max="12"
    majorTickUnit="1"
    minorTickCount="0"
    snapToTicks="true"
    showTickMarks="true"
    showTickLabels="false"
    blockIncrement="1"
    GridPane.rowIndex="1"
    GridPane.columnIndex="0"
    GridPane.halignment="CENTER"
    GridPane.valignment="CENTER"
    value="1"/>

  <Slider
    fx:id="antAmphetamineLevel"
    min="1"
    max="100"
    majorTickUnit="5"
    minorTickCount="0"
    snapToTicks="true"
    showTickMarks="true"
    showTickLabels="false"
    blockIncrement="1"
    GridPane.rowIndex="1"
    GridPane.columnIndex="3"
    GridPane.halignment="CENTER"
    GridPane.valignment="CENTER"
    value="1"/>

  <TerrainView
    fx:id="terrainView"
    GridPane.rowIndex="0"
    GridPane.columnIndex="0"
    GridPane.columnSpan="3"
    GridPane.halignment="CENTER"
    GridPane.valignment="CENTER"
    width="600"
    height="600"/>

  <ToggleButton
    fx:id="runToggle"
    GridPane.rowIndex="1"
    GridPane.columnIndex="1"
    GridPane.valignment="TOP"
    GridPane.halignment="LEFT"
    text="%start_text"
  onAction="#toggleRun"/>

  <ToggleButton
    fx:id="resetButton"
    GridPane.rowIndex="1"
    GridPane.columnIndex="1"
    GridPane.valignment="TOP"
    GridPane.halignment="RIGHT"
    text="%reset_text"
    onAction="#reset"/>

</GridPane>
